<Window x:Class="GitHub.Authentication.Tester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitHub.Authentication"
        mc:Ignorable="d"
        Title="Tester" Height="300" Width="300">
    <DockPanel>
        <Button Content="Show Credentials Dialog" Padding="10" Click="ShowCredentials" />
        <Button Content="Show Authentication Code Dialog" Padding="10" Click="ShowAuthenticationCode" />
    </DockPanel>
</Window>
